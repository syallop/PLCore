category:            PL
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     PL.Var
                     , PL.Name
                     , PL.Type
                     , PL.Reduce
                     , PL.Error
                     , PL.Expr
                     , PL.Binds
                     , PL.Abstracts
                     , PL.Bindings
                     , PL.Parser
                     , PL.Parser.Lispy
                     , PL.TypeCtx
